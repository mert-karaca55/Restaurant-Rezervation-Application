<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".Rezervation">


    <TextView
        android:id="@+id/textView"
        android:layout_width="376dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:background="@drawable/textview1bg"
        android:drawableLeft="@drawable/restaurant"
        android:fontFamily="cursive"
        android:text="Welcome to Mert Restaurant Rezervation System"
        android:textColor="#000000"
        android:textSize="35dp"
        android:textStyle="bold"
        tools:ignore="HardcodedText,MissingConstraints,RtlHardcoded,SpUsage,UseCompatTextViewDrawableXml"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="52dp" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="213dp"
        android:layout_height="48dp"
        android:background="@drawable/textview1bg"
        android:drawableLeft="@drawable/account"
        android:ems="10"
        android:fontFamily="casual"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:text="Name Surname"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:ignore="Autofill,HardcodedText,LabelFor,MissingConstraints,RtlHardcoded,SpUsage"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="204dp" />

    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="213dp"
        android:layout_height="48dp"
        android:background="@drawable/textview1bg"
        android:drawableLeft="@drawable/phone"
        android:ems="10"
        android:fontFamily="casual"
        android:inputType="phone"
        android:minHeight="48dp"
        android:text="Phone Number"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:ignore="Autofill,HardcodedText,LabelFor,MissingConstraints,RtlHardcoded,SpUsage"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="262dp" />

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="213dp"
        android:layout_height="48dp"
        android:background="@drawable/textview1bg"
        android:drawableLeft="@drawable/guests"
        android:ems="10"
        android:fontFamily="casual"
        android:inputType="number"
        android:minHeight="48dp"
        android:text="Number of Guests"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:ignore="Autofill,HardcodedText,LabelFor,MissingConstraints,RtlHardcoded,SpUsage"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="324dp" />

    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="213dp"
        android:layout_height="48dp"
        android:background="@drawable/textview1bg"
        android:drawableLeft="@drawable/history"
        android:ems="10"
        android:fontFamily="casual"
        android:inputType="date"
        android:text="Date"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:ignore="Autofill,HardcodedText,LabelFor,MissingConstraints,RtlHardcoded,SpUsage,SpeakableTextPresentCheck"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="403dp" />

    <EditText
        android:id="@+id/editTextTime"
        android:layout_width="213dp"
        android:layout_height="48dp"
        android:background="@drawable/textview1bg"
        android:drawableLeft="@drawable/time"
        android:ems="10"
        android:fontFamily="casual"
        android:inputType="time"
        android:minHeight="48dp"
        android:text="Time"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:ignore="Autofill,HardcodedText,LabelFor,MissingConstraints,RtlHardcoded,SpUsage"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="472dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="113dp"
        android:layout_height="52dp"
        android:text="Save"
        tools:ignore="HardcodedText,MissingConstraints"
        tools:layout_editor_absoluteX="93dp"
        tools:layout_editor_absoluteY="560dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete All"
        tools:ignore="HardcodedText,MissingConstraints"
        tools:layout_editor_absoluteX="244dp"
        tools:layout_editor_absoluteY="560dp" />


</androidx.constraintlayout.widget.ConstraintLayout>